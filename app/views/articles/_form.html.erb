
<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :size => "30x10" %>
  </div>

    <%= f.fields_for :author do |author_attributes| %>
        <div class="field">
            <%= author_attributes.label :name %><br>
            <%= author_attributes.text_field :name %>
        </div>
        <div class="field">
            <%= author_attributes.label :age %><br>
            <%= author_attributes.text_field :age %>
        </div>
        <div class="field">
            <%= author_attributes.label :email %><br>
            <%= author_attributes.text_field :email %>
        </div>

    <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
